---
import { Logo } from '@components/Images';
import { FacebookIcon, InstagramIcon, Plus18Icon, ShopCartIcon } from '@components/Icons';
import { ExternalLink } from '@components/Footer';

const footerLinks = [
  {
    icon: FacebookIcon,
    url: 'https://www.facebook.com/doblev3d/',
  },
  {
    icon: InstagramIcon,
    url: 'https://www.instagram.com/doblev3d/',
  },
  {
    icon: Plus18Icon,
    url: 'https://www.youtube.com/watch?v=qqjf7QoYR2k',
  },
  {
    icon: ShopCartIcon,
    url: 'https://catalogo-doblev3d.vercel.app/#/',
  },
];
---

<footer class="bg-slate-100 w-full">
  <div class="w-full max-w-6xl mx-auto p-4 md:py-8">
    <div class="flex gap-5 items-center justify-between flex-col-reverse md:flex-row">
      <div class="flex items-center mb-4">
        <Logo />
        <span class="self-center text-2xl font-semibold text-slate-900 whitespace-nowrap">
          DOBLE V 3D
        </span>
      </div>
      <ul class="flex gap-3 text-slate-600">
        {footerLinks.map((link) => <ExternalLink icon={link.icon} url={link.url} />)}
      </ul>
    </div>
  </div>
</footer>
